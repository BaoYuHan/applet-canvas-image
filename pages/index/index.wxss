/* 横竖版 */
page {
  height: 100%;
  font-size: 28rpx;
  width: 100%;
  overflow-x: hidden;
}
.window {
  position: relative;
  width: 100%;
  height: 100%;
}
.flex-row-center {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.layout-box{
  width: 40%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx auto;
}

.customize-placeholder-image1{
  width: 320rpx;
  height: 200rpx;
}

.customize-placeholder-image2{
  width: 200rpx;
  height: 320rpx;
}

.hide-canvas{
  position: fixed;
  left: 10000px;
}